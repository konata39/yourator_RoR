<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <style>
    .company{
      position:relative;
      width: 1000px;
      height: 200px;
      border: 1px #333 solid;
      background-color: #AAA;
      margin: 10px auto;
    }
    .vacuum{
      position:relative;
      width: 1000px;
      height: 380px;
      border: 1px #333 solid;
      background-color: #AAA;
      margin: 10px auto;
    }
    .left-text{
      position:absolute;
      top: 5px;
      left: 10px;
    }
    .right-text{
      position:absolute;
      top: 5px;
      right: 10px;
    }
    .GG{
      position:relative;
      width:180px;
      height:150px;
      margin: 4px;
      padding: 3px;
      border: 1px #000 solid;
      float:left;
      text-align: center;
    }
    .GG2{
      width:180px;
      height:270px;
      margin: 4px;
      padding: 3px;
      border: 1px #000 solid;
      float:left;
      text-align: center;
    }
    .company_name{
      position:absolute;
      width:80%;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }
  </style>
</head>
<body>
  <div class="company" id="company">
    <font class="left-text">精選公司</font>
    <a href="company" class="right-text">更多公司...</a><br><br>
    <% @company_index.each do |company| %>
    <div id="GG" class="GG" onclick="location.href='company_info?company_id=<%= company.id %>';">
      <div class="company_name"><%= company.company_name %></div>
    </div>
    <% end %>
  </div>
  <div class="vacuum" id="vacuum">
    <font class="left-text">精選職缺</font>
    <a href="job" class="right-text">更多職缺...</a><br><br>
    <% @job_index.each do |job| %>
    <% if job.job_status %>
    <div id="GG" class="GG" onclick="location.href='job_info?job_id=<%= job.id %>';">
      <div class="company_name" >
        <font style="font-size:20px;"><%= job.job_name %></font><br>
        <%= job.company_name %>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.5.17/vue.min.js"></script>
<script>
var company = new Vue({
  el: '#company',
  data: {
    list: [
    ],
  },
});
var job = new Vue({
  el: '#vacuum',
  data: {
    list: [
    ],
  },
});
</script>
</body>
</html>
